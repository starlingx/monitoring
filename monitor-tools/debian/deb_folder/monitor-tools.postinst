#!/bin/bash

#DEBHELPER#

case "$1" in
    configure)
        grep schedstats /etc/sysctl.conf
        if [ $? -ne 0 ]; then
            echo -e "\nkernel.sched_schedstats=1" >> /etc/sysctl.conf
            sysctl -p &>/dev/null
        fi
        exit 0
        ;;
    *)
        echo "monitor-tools postinst called with an unknown argument: $1" >&2
        exit 1
        ;;
esac
