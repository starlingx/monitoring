#!/bin/bash

#DEBHELPER#

case "$1" in
    configure)
        echo -e "\nkernel.sched_schedstats=1" > /etc/sysctl.d/10-monitor-tools.conf
        sysctl -p &>/dev/null
        exit 0
        ;;
    *)
        echo "monitor-tools postinst called with an unknown argument: $1" >&2
        exit 1
        ;;
esac
